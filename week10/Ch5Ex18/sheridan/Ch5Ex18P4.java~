package sheridan;
public class Ch5Ex18P4
{
    public static void main(String args[])
    {
        int row , column;
        System.out.println("Pattern D");
        for(row=6;row>=1;row--)
        {
            for(column=6-row;column>=1;column--)
            {
                System.out.print(" ");
            }
            for(column=1;column<=row;column++)
            {
                System.out.print(column);
            }
            System.out.println();
        }
    }
}